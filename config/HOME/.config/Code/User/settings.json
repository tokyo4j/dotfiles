{
  "[c]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.insertSpaces": false,
    "editor.tabSize": 8
  },
  "[cpp]": {
    "editor.defaultFormatter": "xaver.clang-format",
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[glsl]": {
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "off"
  },
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.tabSize": 4
  },
  "[rust]": {
    "editor.tabSize": 4
  },
  "[shellscript]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.tabSize": 2
  },
  "[zig]": {
    "editor.tabSize": 4
  },
  "C_Cpp.autoAddFileAssociations": false,
  "C_Cpp.default.compilerPath": "/usr/bin/clang",
  "C_Cpp.default.cppStandard": "gnu++17",
  "C_Cpp.default.cStandard": "gnu17",
  "C_Cpp.intelliSenseEngine": "disabled",
  "clangd.arguments": [
    "--function-arg-placeholders=0",
    "--header-insertion=never"
  ],
  "clangd.path": "/usr/bin/clangd",
  "cmake.automaticReconfigure": false,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.accessibilitySupport": "off",
  "editor.detectIndentation": false,
  "editor.fastScrollSensitivity": 5,
  "editor.fontFamily": "monospace, NotoSansM Nerd Font Mono",
  "editor.formatOnSave": false,
  "editor.inlayHints.enabled": "offUnlessPressed",
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "explorer.confirmDragAndDrop": false,
  "explorer.sortOrder": "type",
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    "*.h": "c"
  },
  "git.autoRepositoryDetection": false,
  "git.confirmSync": false,
  "git.terminalAuthentication": false,
  "github.gitAuthentication": false,
  "githubPullRequests.codingAgent.codeLens": false,
  "githubPullRequests.pullBranch": "never",
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "kennedy",
  "mesonbuild.configureOnOpen": false,
  "mesonbuild.downloadLanguageServer": false,
  "mesonbuild.languageServer": null,
  "remote.SSH.useLocalServer": false,
  "rust-analyzer.server.path": "/usr/bin/rust-analyzer",
  "security.workspace.trust.enabled": false,
  "terminal.integrated.altClickMovesCursor": false,
  "terminal.integrated.commandsToSkipShell": [
    "workbench.action.toggleSidebarVisibility",
    "workbench.action.toggleAuxiliaryBar"
  ],
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.defaultProfile.linux": "fish",
  "terminal.integrated.env.linux": {
    "EDITOR": "code --wait"
  },
  "terminal.integrated.initialHint": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.suggest.enabled": false,
  "window.commandCenter": false,
  "window.controlsStyle": "native",
  "window.menuBarVisibility": "hidden",
  "window.title": "${rootName}",
  "window.titleBarStyle": "native",
  "window.zoomLevel": 1,
  "workbench.colorCustomizations": {
    "[Monokai]": {
      "editorInlayHint.background": "#18181800",
      "editorInlayHint.foreground": "#868686f0",
      "editorInlayHint.parameterForeground": "#486148f0",
      "editorInlayHint.typeForeground": "#486148f0",
      "editorStickyScroll.background": "#4d4d4d",
      "editorStickyScrollHover.background": "#4d4d4d",
      "tab.activeBackground": "#2d3f59",
    }
  },
  "workbench.colorTheme": "Monokai",
  "workbench.editor.empty.hint": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.localHistory.enabled": false,
  "workbench.startupEditor": "none",
  "zig.path": "/usr/bin/zig",
  "zig.zls.enableArgumentPlaceholders": false,
  "zig.zls.path": "/usr/bin/zls",
}
